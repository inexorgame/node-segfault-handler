{
  "name": "@inexorgame/segfault-handler",
  "description": "catches SIGSEGV and prints diagnostic information",
  "version": "1.0.1",
  "maintainer": "The Inexor Team",
  "contributors": [
    "Inexor <info@inexor.org>",
    "Dave Dopson <ddopson@gmail.com>",
    "Mark Smith <msmith@rallydev.com>",
    "David Swift <dswift@pccowboy.com>",
    "Anton Whalley <anton@venshare.com>"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/inexorgame/node-segfault-handler.git"
  },
  "dependencies": {
    "bindings": "^1.2.1",
    "nan": "^2.0.9",
    "node-pre-gyp": "^0.6.38"
  },
  "bundledDependencies": [
    "node-pre-gyp"
  ],
  "scripts": {
    "install": "node-pre-gyp install --fallback-to-build"
  },
  "targets": [
    {
      "target_name": "action_after_build",
      "type": "none",
      "dependencies": [ "<(module_name)" ],
      "copies": [
        {
          "files": [ "<(PRODUCT_DIR)/<(module_name).node" ],
          "destination": "<(module_path)"
        }
      ]
    }
  ],
  "binary": {
    "module_name": "segfault-handler",
    "module_path": "./build/Release/",
    "host": "https://dl.bintray.com/inexorgame/node-segfault-handler/binaries"
  }
}
